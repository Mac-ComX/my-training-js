    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">

                <div class="card animated fadeInDown">
                    <img src="{{ this.image.path }}" class="card-img-top" alt="{{ this.image.filename }}">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ this.image.title }}
                        </h5>
                        <p class="card-text">
                            {{ this.image.description }}
                        </p>
                        <p>
                            {{ timeago this.image.created_at }}
                        </p>
                        <a href="/image/{{ this.image._id }}/delete" class="btn btn-danger btn-block">
                            Delete Image
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>